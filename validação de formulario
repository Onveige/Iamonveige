function validateForm() {
    var name = document.forms["myForm"]["name"].value;
    var email = document.forms["myForm"]["email"].value;
    
    if (name == "") {
        alert("Por favor, preencha seu nome");
        return false;
    }
    
    if (email == "") {
        alert("Por favor, preencha seu e-mail");
        return false;
    }
    
    // Outras validações...
    
    return true;
}
